@page
@model HotelApp.Web.Pages.BookRoomModel
@{
ViewData["Title"] = "Book A Room";
}

<h1>Book A Room</h1>

<h2>Room Title</h2>
<p>
    Room Description
</p>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.FirstName" />
        <input type="date" asp-for="@Model.FirstName" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName" />
        <input type="date" asp-for="@Model.LastName" />
    </div>
    <button type="submit" class="btn btn-primary">Book</button>
</form>